[Unit]
Description=QuantShift Crypto Trading Bot
After=network.target postgresql.service redis.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/quantshift
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/opt/quantshift/.env
ExecStart=/usr/bin/python3 -m quantshift_crypto.main
Restart=always
RestartSec=10
StandardOutput=append:/opt/quantshift/logs/crypto-bot.log
StandardError=append:/opt/quantshift/logs/crypto-bot-error.log

[Install]
WantedBy=multi-user.target
