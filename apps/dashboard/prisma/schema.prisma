generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id          Int      @id @default(autoincrement())
  bot_name    String   @db.VarChar(50)
  symbol      String   @db.VarChar(20)
  side        String   @db.VarChar(10)
  quantity    Decimal  @db.Decimal(20, 8)
  price       Decimal  @db.Decimal(20, 8)
  total_value Decimal  @db.Decimal(20, 2)
  commission  Decimal? @default(0) @db.Decimal(20, 8)
  order_id    String?  @db.VarChar(100)
  status      String   @db.VarChar(20)
  timestamp   DateTime @default(now())
  metadata    Json?

  @@map("trades")
  @@index([bot_name, symbol], name: "idx_trades_bot_symbol")
  @@index([status], name: "idx_trades_status")
  @@index([timestamp(sort: Desc)], name: "idx_trades_timestamp")
}

model Position {
  id            Int      @id @default(autoincrement())
  symbol        String
  quantity      Float
  entry_price   Float
  current_price Float
  entry_time    DateTime
  bot_name      String
  status        String
  stop_loss     Float?
  take_profit   Float?
  unrealized_pnl Float?

  @@map("positions")
}
